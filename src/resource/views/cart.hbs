<section class="align-items-center bg-img bg-img-fixed" id="food-menu-section"
    style="background-image: url(img/banner3.jpg);">
    <div class="container">
        <div class="food-menu">
            <form id="cart" action="">
            <table id="cartTable" class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Price</th>
                        <th scope="col">Number</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listItem}}
                    <tr id="cart-item-{{@index}}">
                        <th scope="row" id="idx">{{sum @index 1}}</th>
                        <td id="name">{{this.name}}</td>
                        <td><img id="Image" src="" alt=""></td>
                        <td id="price">{{this.price}}</td>
                        <td id="number">
                            <form class="changeValue">
                                <div class="value-button" id="decrease" onclick="decreaseValue({{@index}})"
                                    value="Decrease Value">-</div>
                                <input type="number" id="numberOfItem" value="{{this.number}}">
                                <div class="value-button" id="increase" onclick="increaseValue({{@index}})"
                                    value="Increase Value">+</div>
                            </form>
                        </td>
                        <td id="total"> {{this.totalPrice}} </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
            
            <p>Total</p>
            <p id="totalPrice">{{SumTotal}}</p>
            <button id="payButton" type="button" onclick="SendDataFromCart()" class="btn btn-primary" >Thanh To√°n</button>
            </form>
            

            
        </div>
        
    </div>

</section>