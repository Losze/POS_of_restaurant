    <form method="POST" action="/order/{{food._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên món</label>
            <input type="text" class="form-control" value="{{food.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" value="{{food.description}}" id="description" name="description">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá tiền</label>
            <input type="text" class="form-control" value="{{food.price}}" id="price" name="price">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Ảnh</label>
            <input type="text" class="form-control" value="{{food.image}}" id="image" name="image">
        </div>
        
        <input type="submit" value="cập nhật">
    </form>